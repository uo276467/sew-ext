
<!ELEMENT rutas (ruta+)>
<!ELEMENT ruta (personasAdecuadas, inicio, referencias, hitos, planimetria, altimetria)>
<!ELEMENT personasAdecuadas (publico+)>
<!ELEMENT publico (#PCDATA)>
<!ELEMENT inicio (coordenadas)>
<!ELEMENT coordenadas (#PCDATA)>
<!ELEMENT referencias (referencia, referencia, referencia+)>
<!ELEMENT referencia (#PCDATA)>
<!ELEMENT hitos (hito, hito, hito, hito, hito+)>
<!ELEMENT hito (distancia, coordenadas, galeriaFotos, galeriaVideos)>
<!ELEMENT distancia (#PCDATA)>
<!ELEMENT galeriaFotos (foto+)>
<!ELEMENT foto (#PCDATA)>
